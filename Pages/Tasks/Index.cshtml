@page
@model TMS.Pages.Tasks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get" class="mb-3">
    <input type="text" name="SearchString" value="@Model.SearchString" placeholder="Search tasks..." class="form-control" />
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].IsComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].Priority)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TaskItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
